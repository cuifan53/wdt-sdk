{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "noImplicitAny": false,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules*",
        "test/",
        "dist/"
    ]
}